<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/optionCardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/optionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Untitled1"/>

            <ImageView
                android:id="@+id/optionCardToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_expand_more_black_24dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/optionCardExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/optionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit" />

            <TextView
                android:id="@+id/optionSetup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionEdit"
                android:text="@string/setup" />

            <TextView
                android:id="@+id/optionParamSpaceEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionSetup"
                android:text="@string/edit_parameter_space" />

            <TextView
                android:id="@+id/optionParamSpacePlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionParamSpaceEdit"
                android:text="@string/play_parameter_space" />

            <TextView
                android:id="@+id/optionParamSpaceTilt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionParamSpacePlay"
                android:text="@string/tilt_parameter_space" />

            <TextView
                android:id="@+id/optionRotationSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optionParamSpaceTilt"
                android:text="@string/rotation_space" />

            <ImageView
                android:id="@+id/optionDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clear_black_24dp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
